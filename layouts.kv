<Label>
    color:(0,0,0,1)

<Button>
    background_normal:''

<MainPage>
    GridLayout:
        cols:2
        Button:
            id:btn_shots
            text:"SHOTS"
            font_size:32
            on_press: root.manager.current = 'shots_page'
        Button:
            id:btn_drinks
            text:"DRINKS"
            font_size:32
            on_press: root.manager.current = 'drinks_page'

<ShotsPage>
    BoxLayout:
        id: shots_page_layout
        orientation: "vertical"
        BoxLayout:
            id: shots_top_bar
            size_hint_y: 0.14
            orientation: "horizontal"
            Button:
                text: "back"
                size_hint_x: 0.1
                on_press: root.back()
            Label:
                id: shots_title
                text: "SHOTS"
            Label:
                text:""
                size_hint_x: 0.1

<DrinksPage>
    BoxLayout:
        id: drinks_page_layout
        orientation: "vertical"
        BoxLayout:
            id: drinks_top_bar
            size_hint_y: 0.14
            orientation: "horizontal"
            Button:
                text: "back"
                size_hint_x: 0.1
                on_press: root.back()
            Label:
                id: drinks_title
                text: "DRINKS"
            Label:
                text:""
                size_hint_x: 0.1
            
