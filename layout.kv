<Label>
    color:(0,0,0,1)

<Button>
    background_normal:''

<MainPage>
    GridLayout:
        cols:2
        Button:
            id:btn_shots
            text:"SHOTS"
            font_size:32
            on_press: root.manager.current = 'shots_page'
        Button:
            id:btn_drinks
            text:"DRINKS"
            font_size:32
            on_press: root.manager.current = 'drinks_page'

<ShotsPage>
    BoxLayout:
        id: shots_page_layout
        orientation: "vertical"
        BoxLayout:
            id: shots_top_bar
            size_hint_y: 0.14
            orientation: "horizontal"
            Button:
                size_hint_x: 0.1
                on_press: root.back()
                Image:
                    size_hint_y: None
                    height: 30
                    source:'images/back_arrow.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Label:
                id: shots_title
                text: "SHOTS"
            Label:
                text:""
                size_hint_x: 0.1

<DrinksPage>
    BoxLayout:
        id: drinks_page_layout
        orientation: "vertical"
        BoxLayout:
            id: drinks_top_bar
            size_hint_y: 0.14
            orientation: "horizontal"
            Button:
                size_hint_x: 0.1
                on_press: root.back()
                Image:
                    size_hint_y: None
                    height: 30
                    source:'images/back_arrow.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Label:
                id: drinks_title
                text: "DRINKS"
            Label:
                text:""
                size_hint_x: 0.1

<ProgressPage>

    BoxLayout:
        orientation:'vertical'
        padding: 50
        Image:
            id:prog_bar
            #nocache:True
            source:"atlas://images/prog_bar_atlas/progress_bar 01"
            size_hint:(1, 1)
            center_x: self.parent.center_x
            center_y: self.parent.center_y

            
